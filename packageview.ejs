<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->
<%- include('../common/header.ejs'); %>
<!-- END: Head-->

<!-- BEGIN: Body-->

<body class="vertical-layout vertical-menu-modern navbar-floating footer-static" data-open="click" data-menu="vertical-menu-modern" data-col="">
  <!-- BEGIN: Header-->
  <%- include('../common/navbar.ejs'); %>
  <!-- END: Header-->

  <!-- BEGIN: Main Menu-->
  <%- include('../common/sidebar.ejs'); %>
  <!-- END: Main Menu-->

  <!-- BEGIN: Content-->
  <div class="app-content content">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper">
      <div class="content-header row"></div>
      <div class="content-body">
        <div class="auth-wrapper">
          <div class="auth-inner py-2">
            <!-- Register v1 -->
            <div class="card mb-0">
              <div class="card-body">
                <form class="auth-register-form" action="" method="POST">
                  <div style="display: flex; gap: 20px; align-items: center;">
                    <!-- Main Image -->
                    <div class="border" style="width: 200px; height: 200px; border-radius: 10px; overflow: hidden;">
                      <% if (Array.isArray(view.img) && view.img.length > 0) { %>
                      <img src="<%- view.img[0].image %>" alt=" image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
                      <% } else if (view.image) { %>
                      <img src="<%- view.image %>" alt=" image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 10px;">
                      <% } else { %>
                      <div style="width: 100%; height: 100%; background-color: #f0f0f0; display: flex; justify-content: center; align-items: center; border-radius: 10px;">
                        <span>No Image</span>
                      </div>
                      <% } %>
                    </div>

                    <!-- Additional Images -->
                    <% if (Array.isArray(view.img) && view.img.length > 1) { %>
                    <div style="display: flex; flex-direction: row; gap: 10px;">
                      <% view.img.slice(1, Math.min(view.img.length, 5)).forEach(function(student) { %>
                      <div class="border" style="width: 200px; height: 200px; border-radius: 5px; overflow: hidden;">
                        <img src="../<%- student.image %>" alt=" image" style="width: 100%; height: 100%; object-fit: cover; border-radius: 5px;">
                      </div>
                      <% }); %>
                    </div>
                    <% } %>
                  </div>


                  <div class="mb-1 mt-2">
                    <label for="first_name" class="form-label">Customer Name</label>
                    <input type="text" class="form-control" id="name" name="name" readonly value="<%= view.data && view.data.name ? view.data.name : 'No Customer' %>" aria-describedby="first_name" tabindex="1" autofocus />
                  </div>

                  <div class="mb-1">
                    <label for="tracking_number" class="form-label">Tracking Number</label>
                    <input type="text" class="form-control" id="tracking_number" name="tracking_number" readonly value="<%= view.tracking_number %>" aria-describedby="email" tabindex="2" />
                  </div>
                  <div class="mb-1">
                    <label for="carrier" class="form-label">Carrier</label>
                    <input type="text" class="form-control" id="carrier" name="carrier" readonly value="<%= view.carriers && view.carriers.name ? view.carriers.name : 'No Carrier' %>" aria-describedby="address" tabindex="3" />
                  </div>

                  <div class="mb-1">
                    <label for="sender" class="form-label">Sender</label>
                    <input type="text" class="form-control" id="sender_number" name="sender" readonly value="<%= view.sender %>" aria-describedby="sender" tabindex="4" />
                  </div>
                  <div class="mb-1">
                    <label for="weight" class="form-label">Weight</label>
                    <input type="text" class="form-control" id="weight_number" name="weight" readonly value="<%= view.weight %>" aria-describedby="weight" tabindex="4" />
                  </div>

                  <!-- <div class="input-group mb-1">
                      <label for="weight" class="form-label">Weight</label>
                      <input type="text" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="basic-addon2">
                      <span class="input-group-text" id="basic-addon2">@example.com</span>
                    </div> -->
                  <div class="mb-1">
                    <label for="self_location" class="form-label">Shelf location</label>
                    <input type="text" class="form-control" id="self_location" name="self_location" readonly value="<%= view.self_location %>" aria-describedby="self_location" tabindex="4" />
                  </div>
                  <div class="mb-1">
                    <label for="self_location" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" name="date" readonly value="<%= view.date %>" aria-describedby="self_location" tabindex="4" />
                  </div>

                  <div class="mb-1">
                    <label for="message" class="form-label">Message</label>
                    <textarea type="text" class="form-control" id="message" name="message" rows="4" cols="50" readonly aria-describedby="self_location" tabindex="4"><%= view.message %></textarea>
                  </div>

                  <div class="d-flex justify-content-end">
                    <a href="/packagelist" class="btn btn-warning" tabindex="6">Back</a>
                  </div>
                </form>
              </div>
            </div>
            <!-- /Register v1 -->
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- END: Content-->

  <div class="sidenav-overlay"></div>
  <div class="drag-target"></div>

  <!-- BEGIN: Footer-->
  <%- include('../common/footer.ejs'); %>
  <!-- END: Footer-->

  <!-- BEGIN: Vendor JS-->
  <script src="../../../app-assets/vendors/js/vendors.min.js"></script>
  <!-- END: Vendor JS-->

  <!-- BEGIN: Page Vendor JS-->
  <script src="../../../app-assets/vendors/js/charts/apexcharts.min.js"></script>
  <script src="../../../app-assets/vendors/js/extensions/toastr.min.js"></script>
  <!-- END: Page Vendor JS-->

  <!-- BEGIN: Theme JS-->
  <script src="../../../app-assets/js/core/app-menu.js"></script>
  <script src="../../../app-assets/js/core/app.js"></script>
  <!-- END: Theme JS-->

  <!-- BEGIN: Page JS-->
  <script src="../../../app-assets/js/scripts/pages/dashboard-ecommerce.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <!-- END: Page JS-->

  <script>
    $(window).on("load", function() {
      if (feather) {
        feather.replace({
          width: 14,
          height: 14,
        });
      }
    });
  </script>
</body>
<!-- END: Body-->

</html>